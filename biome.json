{
  "$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
  "extends": ["@ivangabriele/biome-config"],
  "root": true,
  "vcs": {
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": ["**/*.json", "**/*.jsonc"]
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on",
        "useSortedAttributes": "on",
        "useSortedKeys": "on",
        "useSortedProperties": "on"
      }
    }
  },
  "json": {
    "assist": {
      "enabled": false
    },
    "formatter": {
      "trailingCommas": "none"
    },
    "parser": {
      "allowComments": true,
      "allowTrailingCommas": true
    }
  }
}
