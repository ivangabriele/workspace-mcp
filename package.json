{
  "name": "@workspace-mcp/root",
  "description": "MCP server with IDEs extensions to CRUD current workspace files and run CLI commands within it.",
  "license": "AGPL-3.0",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "bun": "1.2"
  },
  "workspaces": [
    "vscode"
  ],
  "scripts": {
