    "test:e2e": "bun run workspaces-run --script test:e2e",
    "test:lint": "bun run workspaces-run --script test:lint",
    "test:type": "bun run workspaces-run --script test:type",
    "test:unit": "bun run workspaces-run --script test:unit"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.3",
    "@ivangabriele/biome-config": "2.0.0",
    "@modelcontextprotocol/inspector": "0.16.4",
    "bhala": "3.0.4",
    "bun-types": "1.2.20",
    "typescript": "5.9.2",
    "vite": "7.1.2",
    "vitest": "3.2.4"
  }
}
